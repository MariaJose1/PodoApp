@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model Angle.Models.EntrarModel

@if (Request.IsAuthenticated)
{
    Response.Redirect(Url.Action("Dashboard_v1", "Dashboard"));
}
else
{
    <div class="block-center mt-xl wd-xl">
        <!-- START panel-->
        <div class="panel panel-dark panel-flat">
            <div class="panel-heading text-center">
                <a href="#">
                    <img src="~/Content/Images/logoPages.png" alt="Image"
                         class="block-center img-rounded" />
                </a>
            </div>
            <div class="panel-body">
                <p class="text-center pv">
                    Para iniciar sesión,
                    introduzca su nombre de usuario y contraseña. Si tiene algún problema,
                    contacte con el responsable.
                </p>


                @using (Html.BeginForm("Login", "Pages", new
                {
                    ReturnUrl = ViewBag.ReturnUrl
                }, FormMethod.Post, new
                {
                    @class = "mb-lg",
                    role = "form"
                }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new
               {
                   @class = "text-danger"
               })
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Usuario, new
                   {
                       @class = "form-control",
                       placeholder = "Nombre de usuario"
                   })
                        <span class="icon-user form-control-feedback text-muted"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(m => m.Password, new
                   {
                       @class = "form-control",
                       placeholder = "Contraseña"
                   })
                        <span class="icon-lock form-control-feedback text-muted"></span>
                    </div>
                    <input type="submit" value="Entrar" class="btn btn-block btn-primary mt-lg" />
                }




            </div>
        </div>
        <!-- END panel-->
    </div>
}