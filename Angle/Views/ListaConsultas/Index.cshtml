@model IEnumerable<Angle.Models.consulta>

@{
    ViewBag.Title = "Index";
}

<h3>Consultas</h3>


<div class="panel panel-default">
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Fecha Consulta")
                </th>
                <th>
                    @Html.DisplayName("Observaciones")
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>

                    <td>
                        @* @Html.ActionLink("Edit", "Consulta", new { id = item.idConsulta })*@
                        <a href="@Url.Action("Edit", "Consulta", new { idpaciente = item.paciente.idPaciente})">Editar Consulta</a>

                    </td>
                    <td>
                        <a href="@Url.Action("Create", "Consulta", new { idpaciente = item.paciente.idPaciente })">Añadir Nueva Consulta</a>
                    </td>
                </tr>

            }



        </table>
    </div>
</div>