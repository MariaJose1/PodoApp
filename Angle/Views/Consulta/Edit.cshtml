@model Angle.Models.FormConsulta

@{
    ViewBag.Title = "Create";
}

<h3>Editar Consulta</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdPaciente)
    @Html.HiddenFor(m => m.IdConsulta)

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-horizontal">
                    <h4>Consulta</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdPodologo, htmlAttributes: new { @class = "control-label col-md-2" })

                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.IdPodologo, new SelectList(ViewBag.Podologos,
                          "Text", "Value", "-- Seleccionar --"
                         ),
                         new { @class = "form-control" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3 text-left">
                            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-4" })
                        </div>
                        <div class="col-md-9 text-left">
                            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3 text-left">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-4" })
                        </div>
                        <div class="col-md-9 text-left">
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-5 col-md-10">
            <input type="submit" value="Añadir" class="btn btn-primary" />
        </div>
    </div>

}
<div>
    @Html.ActionLink("Volver atrás", "Index", "ListaPacientes")
</div>
