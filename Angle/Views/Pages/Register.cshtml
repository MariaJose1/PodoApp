@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model Angle.Models.RegistroModel
<div class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center">
            <a href="#">
                <img src="~/Content/Images/logo.png" alt="Image"
                     class="block-center img-rounded" />
            </a>
        </div>
        <div class="panel-body">
            <p class="text-center pv">REGISTRO PROVISIONAL</p>




            @using (Html.BeginForm("Register", "Pages", FormMethod.Post, new { @class = "mb-lg", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Usuario, new
                    {
                        @class = "form-control",
                        placeholder = "Usuario"
                    })
                    <span class="icon-user form-control-feedback text-muted"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Password, new
                    {
                        @class =
             "form-control",
                        placeholder = "Contraseña"
                    })
                    <span class="icon-lock form-control-feedback text-muted"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.ConfirmPassword, new
                    {
                        @class = "form-control",
                        placeholder = "Repetir contraseña"
                    })
                    <span class="icon-lock form-control-feedback
text-muted"></span>
                </div>
                <input type="submit" class="btn btn-block btn-primary mt-lg"
                       value="Crear usuario" />
            }

        </div>
    </div>
    <!-- END panel-->
</div>
